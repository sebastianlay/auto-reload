{
	"name": "auto-reload",
	"displayName": "Auto Reload",
	"description": "Automatically reloads files in a regular interval",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": ["Other"],
	"icon": "icon.png",
	"homepage": "https://github.com/sebastianlay/auto-reload",
	"repository": {
    "type": "git",
    "url": "https://github.com/sebastianlay/auto-reload.git"
  },
	"bugs": {
    "url": "https://github.com/sebastianlay/auto-reload/issues"
  },
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "auto-reload.toggle",
				"title": "Auto Reload: Toggle"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.20.4",
		"@types/vscode": "^1.53.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	}
}
